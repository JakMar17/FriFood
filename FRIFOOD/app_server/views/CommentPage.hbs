<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="stylesheets/bootstrap.min.css" >
    <script src="HBS_Helpers/changeString.js"></script>
    <title>{{title}}</title>
</head>
<body>

<div class="container mb-5">

    <div class="card mt-5">
        <div class="row">
            <div class="col-12 mt-3" >

                <h2 class="card-title h2 text-center">Komentarji</h2>
                <div class="col-11 col-sm-10 col-md-11 col-lg-11">


                    <p class="ml-3">Tu se vidi komentarje o restavraciji: {{ restaurantName }}</p>
                </div>


            {{#each komentarji as |komentar|}}
                <div class="row mt-3 mb-3" id = "komentar">
                        <div class="card col-10 offset-1 col-md-8 offset-md-2">

                            <div class="row">
                                <form id={{komentar._id}} hidden>
                                    <input type="hidden" id = "commentID" name="commentID" value="{{komentar._id}}">
                                    <input type="hidden" value="/commentPage" name="returnADR">
                                </form>
                                <p class="card-text m-4">{{komentar.comment}}</p>
                            </div>


                            <div class="row justify-content-end">

                                <div class="dropdown show m-1">
                                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Več
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

                                        <button class="dropdown-item btn-danger" type="button" data-toggle="modal" data-target="#{{ changeModal komentar._id }}" data-whatever="@mdo">Uredi</button>

                                        <button class="dropdown-item btn-danger" type="submit" formmethod="post" formaction="api/komentarji/brisi" form={{ komentar._id }} >Brisi</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                 </div>

                <div class="modal fade" id={{ changeModal komentar._id }} tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Spremeni komentar</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form method="POST" id={{ changeID komentar._id }} action="/api/comments/update">
                                    <input type="hidden" id = "commentID" name="commentID" value={{ komentar._id }}>
                                    <input type="hidden" value="testZaUredboForme" name="test">
                                    <input type="hidden" value="/commentPage" name="returnADR">
                                    <div class="form-group">
                                        <textarea class="form-control" name="newCommentText" id="newCommentText" placeholder="Piši sem !" autofocus>{{komentar.opis}}</textarea>
                                    </div>

                                </form>
                                <div class="modal-footer">
                                    <button type="submit" form={{ changeID komentar._id }} class="btn btn-primary" >Spremeni</button>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            {{/each}}



                <div class="row mt-3 mb-3">
                    <div class="col-10 offset-1 col-md-8 offset-md-2">
                        <div class="row justify-content-end">
                            <div class="btn-group dropright m-1">
                                <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#exampleModal1" data-whatever="@mdo">Nov komentar</button>

                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Odgovori</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="myform" method="POST" action="/api/comments">

                    <div class="form-group">
                        <textarea class="form-control" name="newCommentText" id="newCommentText" placeholder="Piši sem !" autofocus></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="myform" class="btn btn-primary">Objavi odgovor</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Objavi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="myform1" method="POST" action="/api/comments">

                    <div class="form-group">
                        <textarea class="form-control" name="newCommentText" id="newCommentText" placeholder="Piši sem !" autofocus></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="myform1" class="btn btn-primary" >Objavi</button>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" ></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
<script src="javascripts/popper.min.js"></script>
<script src="javascripts/bootstrap.min.js"></script>


<script src="javascripts/commentSuport.js"></script>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" ></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" ></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>


<script>
    console.log(document.getElementById(commentID).value);
</script>

</body>
</html>